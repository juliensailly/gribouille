        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
        </padding>
        <Label text="Total à payer :"/>
        <TextField editable="false" prefWidth="64.0" HBox.hgrow="NEVER" fx:id="sommeFacture">
            <HBox.margin>
                <Insets left="4.0"/>
            </HBox.margin>
        </TextField>
        <Separator maxWidth="1.7976931348623157E308" orientation="VERTICAL" prefHeight="0.0"
                   HBox.hgrow="ALWAYS"/>
