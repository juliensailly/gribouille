<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToggleGroup?>

<MenuBar xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controleurs.MenusController">
	<menus>
		<Menu mnemonicParsing="false" text="Dessin">
			<items>
				<MenuItem mnemonicParsing="false" text="Charger" />
				<MenuItem mnemonicParsing="false" text="Sauvegarder" />
				<MenuItem mnemonicParsing="false" text="Exporter" />
				<SeparatorMenuItem mnemonicParsing="false" />
				<MenuItem mnemonicParsing="false" onAction="#onQuitte" text="Quitter" />
			</items>
		</Menu>
		<Menu mnemonicParsing="false" text="Outils">
			<items>
				<Menu mnemonicParsing="false" text="Épaisseur">
					<items>
						<RadioMenuItem mnemonicParsing="false" text="1">
							<toggleGroup>
								<ToggleGroup fx:id="epaisseur_group" />
							</toggleGroup>
						</RadioMenuItem>
						<RadioMenuItem mnemonicParsing="false" text="2" toggleGroup="$epaisseur_group" />
						<RadioMenuItem mnemonicParsing="false" text="3" toggleGroup="$epaisseur_group" />
						<RadioMenuItem mnemonicParsing="false" text="4" toggleGroup="$epaisseur_group" />
						<RadioMenuItem mnemonicParsing="false" text="5" toggleGroup="$epaisseur_group" />
						<RadioMenuItem mnemonicParsing="false" text="6" toggleGroup="$epaisseur_group" />
						<RadioMenuItem mnemonicParsing="false" text="7" toggleGroup="$epaisseur_group" />
						<RadioMenuItem mnemonicParsing="false" text="8" toggleGroup="$epaisseur_group" />
						<RadioMenuItem mnemonicParsing="false" text="9" toggleGroup="$epaisseur_group" />
					</items>
				</Menu>
				<RadioMenuItem mnemonicParsing="false" text="Crayon">
					<toggleGroup>
						<ToggleGroup fx:id="outil_group" />
					</toggleGroup>
				</RadioMenuItem>
				<RadioMenuItem mnemonicParsing="false" text="Etoile" toggleGroup="$outil_group" />
			</items>
		</Menu>
		<Menu mnemonicParsing="false" text="Aide">
			<items>
				<MenuItem mnemonicParsing="false" text="À propos" />
			</items>
		</Menu>
	</menus>
</MenuBar>
